{
    "manifest_version":3,
    "name": "Summarize",
    "version": "1.0",
    "permissions":["activeTab","scripting","storage"],
    "action":{
        "default_popup":"popup.html",
        "default_icon":"icon.png"


    },
    "content_scripts":[
        {
            "matches":["<all_urls>"],
            "js":["content.js"]
        }
    ],
    "background":{
        "service_worker":"background.js"
    },
    "options_page":"option.html",
    "host_permissions":[
        "https://api.generativeai.google/v1beta2/models/gemini-1.5/*"
    ]
}